<?xml version="1.0"?>
<launch>
  <group ns="rtabmap">

    <!-- Odometry -->
    <node pkg="rtabmap_ros" type="rgbd_odometry" name="rgbd_odometry">
      <remap from="rgb/image"       to="/kinect/rgb/image_rect_color"/>
      <remap from="depth/image"     to="/kinect/depth_registered/image_raw"/>
      <remap from="rgb/camera_info" to="/kinect/depth_registered/camera_info"/>

      <param name="frame_id" type="string" value="base_link"/>
      <param name="odom_frame_id" type="string" value="odom"/>
      <param name="publish_tf" type="bool" value="true"/>
    </node>

    <node name="rtabmap" pkg="rtabmap_ros" type="rtabmap"  args="--delete_db_on_start">
          <param name="frame_id" type="string" value="base_link"/>
          <param name="publish_tf" type="bool" value="false"/>
          <param name="subscribe_depth" type="bool" value="true"/>
          <param name="map_frame_id" type="string" value="map"/>

          <remap from="odom" to="odom"/>
          <remap from="rgb/image" to="/kinect/rgb/image_rect_color"/>
          <remap from="depth/image" to="/kinect/depth_registered/image_raw"/>
          <remap from="rgb/camera_info" to="/kinect/rgb/camera_info"/>

          <param name="queue_size" type="int" value="1"/>

          <!-- RTAB-Map's parameters -->
          <param name="RGBD/AngularUpdate" type="string" value="0.01"/>
          <param name="RGBD/LinearUpdate" type="string" value="0.01"/>
          <param name="Rtabmap/TimeThr" type="string" value="700"/>
          <param name="Mem/RehearsalSimilarity" type="string" value="0.45"/>
          <param name="RGBD/OptimizeFromGraphEnd" type="string" value="true"/>
    </node>
  </group>
</launch>
